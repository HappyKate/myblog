<h1 class="post_name1"><%= @post.title%></h1>
<p class="post_date1"><%= time_ago_in_words(@post.created_at) %></p>

<p class="post_body"><%=raw @post.body %></p>
<div id="strela">
  // тут тебе нужно следующий и предыдущий, а не первый и последний
<%= link_to  Post.first do%>
  <%= image_tag "icons8-двойная-стрелка-влево-24.png", class: "strela" %>
<%end %>
<%=link_to  Post.last do%>
  <%= image_tag "icons8-двойная-стрелка-вправо-30.png", class: "strela" %>
<% end %>
</div>
<div class="knp">
<%= link_to "Редактировать", edit_post_path(@post), :class => 'btn btn-outline-dark' %>
<%= link_to "Удалить", post_path(@post), method: :delete, data: {confirm: 'Удалить статью?'}, :class => 'btn btn-outline-dark' %>
</div>
<hr>
<h4 class="post_body"><%= @post.comments.count %> Comments</h4>
<div class="mt-3 md-3">
  <%= render @post.comments %>
  <%= render 'comments/form' %>
</div>
