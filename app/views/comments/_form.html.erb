<h4 class="post_body">Добавить комментарий</h4>
<%= form_for ([@post, @post.comments.build]) do |f|%>
  <form>
    <div class="form-group">
      <label for="formGroupExampleInput" class="post_body">Имя пользователя</label>
      <%= f.text_field :username, {:class => 'form-control'} %>
    </div>
    <div class="form-group post_body">
      <label for="formGroupExampleInput2">Комментарий</label>
      <%= f.text_area :body, {:class => 'form-control'} %>
    </div>
    <p><%= f.submit("Сохранить",{:class => 'btn btn-outline-dark'})%></p>
  </form>
<%end%>