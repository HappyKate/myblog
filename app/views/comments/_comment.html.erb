<div class="row">
  <div class="col">
    <p class="post_body"><strong><%= comment.username %></strong>: <%= comment.body %></p>
    <p class="post_date1"><%= time_ago_in_words(comment.created_at) %> ago</p>
  </div>
  <div class="col btn1">
    <% if user_signed_in? %>
      <p><%= link_to 'Удалить', [comment.post, comment], method: :delete, class: "btn btn-outline-dark",
                     data: {confirm: 'Удалить комментарий?'}, id: "btn1" %></p>
    <%end %>
  </div>
</div>
<hr>
